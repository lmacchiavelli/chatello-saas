# Chatello SaaS Configuration Example
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=chatello_saas

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=production
ADMIN_SECRET_KEY=your-admin-secret-key

# AI Provider API Keys (for Pro/Agency plans)
OPENAI_API_KEY=sk-proj-your-openai-key
ANTHROPIC_API_KEY=sk-ant-api-your-anthropic-key
DEEPSEEK_API_KEY=sk-your-deepseek-key

# Payment Provider (Future)
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret
STRIPE_SECRET_KEY=sk_live_your-stripe-key
PAYPAL_CLIENT_SECRET=your-paypal-secret

# Admin Dashboard Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Server Configuration
SERVER_IP=your.server.ip.address
API_DOMAIN=api.chatello.io

# Features
FOUNDERS_DEAL_ENABLED=true
FOUNDERS_DEAL_LIMIT=500
FOUNDERS_DEAL_PRICE=29.0